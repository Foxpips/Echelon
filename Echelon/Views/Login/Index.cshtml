@using Echelon.Resources
@model Echelon.Models.ViewModels.LoginViewModel

@section metadata{
    <title>@SiteTitle.LoginPage</title>
}

<section id="wrapper">
    <div class="login">
        <div class="login__container">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new {id = "loginform", @class = "form-horizontal form__container"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, Login.LoginFailed)
                <h3 class="login__title">@Login.LogIn</h3>
                <div class="col-xs-12">
                    <div class="form-group">
                        @Html.TextBoxFor(u => u.Email, new {@class = "form-control", placeholder = "Email", required = "true", oninvalid = "this.setCustomValidity(" + Login.MissingEmail + ")"})
                        @Html.ValidationMessageFor(u => u.Email)
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        @Html.PasswordFor(u => u.Password, new {@class = "form-control", placeholder = "Password", required = "true", oninvalid = "this.setCustomValidity(" + Login.MissingPassword + ")"})
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>
                </div>
                <div class="col-md-12">
                </div>
                <div class="col-xs-12">
                    <div class="form-group text-align-center margin-top-20">
                        <button class="btn btn-info btn-lg btn-block" type="submit">@Login.LogIn</button>
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-xs-12 margin-top-10 text-align-center">
                    <div class="login__social">
                        <a class="btn google__btn google__icon fz-df" href="@Url.Action("LoginGoogle", "ExternalLogin")">
                            <span class="google__label">@Login.GoogleLogIn</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group text-align-center margin-bottom-0">
                        <p>
                            @Login.NoAccount
                            <a href="" class="text-primary margin-left-5">
                                <b>@Login.Register</b>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script>
        $(function() {
            LoginPage();
        });
    </script>
}