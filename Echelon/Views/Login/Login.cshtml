@using Echelon.Resources.Content
@model Echelon.Models.ViewModels.LoginViewModel

@section metadata{
    <title>@SiteTitle.LoginPage</title>
}

<section id="wrapper" class="login-register">
    <div class="login-box">
        <div class="white-box">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "loginform", @class = "form-horizontal form-material" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, Login.LoginFailed)
                <h3 class="box-title m-b-20">@Login.LogIn</h3>
                <div class="col-xs-12">
                    <div class="form-group">
                        @Html.TextBoxFor(u => u.Email, new { @class = "form-control", placeholder = "Email", required = "true" })
                        @Html.ValidationMessageFor(u => u.Email)
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control", placeholder = "Password", required = "true" })
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>
                </div>
                <div class="col-md-12">
                </div>
                <div class="col-xs-12">
                    <div class="form-group text-center m-t-20">
                        <button class="btn btn-info btn-lg btn-block text-uppercase" type="submit">@Login.LogIn</button>
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-xs-12 m-t-10 text-center">
                    <div class="social">
                        <a class="btn google__btn google__icon fz-df" href="@Url.Action("LoginGoogle", "ExternalLogin")">
                            <span class="google__label">@Login.GoogleLogIn</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group text-center m-b-0">
                        <p>
                            @Login.NoAccount
                            <a href="" class="text-primary m-l-5">
                                <b>@Login.Register</b>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>